<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<p><%= @task.completed %></p>

<%= link_to "Edit task", edit_task_path(@task) %>
<br>
<%= link_to "Back to the tasks list", tasks_path %>
<br>
<%= link_to "Delete #{@task.title}",
            tasks_path(@task),
            method: :delete,
            data: { confirm: "Are you sure?" } %>


